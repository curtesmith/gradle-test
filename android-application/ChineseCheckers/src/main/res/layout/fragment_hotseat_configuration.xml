<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/hotseat"
        android:textSize="20sp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 P"
            android:id="@+id/hotseatTwoPlayerButton"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 P"
            android:id="@+id/hotseatThreePlayerButton"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 P"
            android:id="@+id/hotseatFourPlayerButton"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 P"
            android:id="@+id/hotseatSixPlayerButton"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/layer__0000s_0000_warning"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/red"
            android:id="@+id/hotseatRedPlayerNameEditText"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/layer__0000s_0000_warning"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/green"
            android:id="@+id/hotseatGreenPlayerNameEditText"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/layer__0000s_0000_warning"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/purple"
            android:id="@+id/hotseatPurplePlayerNameEditText"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/layer__0000s_0000_warning"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/blue"
            android:id="@+id/hotseatBluePlayerNameEditText"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/layer__0000s_0000_warning"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/yellow"
            android:id="@+id/hotseatYellowPlayerNameEditText"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/layer__0000s_0000_warning"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/orange"
            android:id="@+id/hotseatOrangePlayerNameEditText"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/hotseat_start_game"
        android:id="@+id/hotseatGameActivityButton"/>

</LinearLayout>
