<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.brocku.chinesecheckers.HotseatGameActivity$PlaceholderFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center"
        android:background="@color/red"
        android:textSize="40sp"
        android:text="Test's Turn"
        android:id="@+id/hotseatCurrentPlayerTextView"/>

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hotseatCurrentPlayerTextView"
        android:layout_above="@+id/hotseatPlayerControlsLayout"
        android:background="@color/charcoal_hotseat_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/hotseatPlayerControlsLayout">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hotseat_move_reset"
            android:id="@+id/hotseatMoveResetButton"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hotseat_move_done"
            android:id="@+id/hotseatMoveDoneButton"/>

    </LinearLayout>

</RelativeLayout>
